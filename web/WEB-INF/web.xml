<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>contactServlet</servlet-name>
        <servlet-class>com.stackuncontrol.servlet.contactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signupServlet</servlet-name>
        <servlet-class>com.stackuncontrol.servlet.signupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signinServlet</servlet-name>
        <servlet-class>com.stackuncontrol.servlet.signinServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editProfileServlet</servlet-name>
        <servlet-class>com.stackuncontrol.servlet.editProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>askQuestionServlet</servlet-name>
        <servlet-class>com.stackuncontrol.servlet.askQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contactServlet</servlet-name>
        <url-pattern>/contactServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signupServlet</servlet-name>
        <url-pattern>/signupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signinServlet</servlet-name>
        <url-pattern>/signinServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editProfileServlet</servlet-name>
        <url-pattern>/editProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>askQuestionServlet</servlet-name>
        <url-pattern>/askQuestionServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--Remove file extension web script start-->
    <servlet>
        <servlet-name>/</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>/</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <!--Remove file extension web script end-->
</web-app>
